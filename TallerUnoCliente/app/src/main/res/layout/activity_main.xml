<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#132742"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/izquierda"
        android:layout_width="110dp"
        android:layout_height="61dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#00FFA5"
        android:text="Izquierda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disparar" />

    <Button
        android:id="@+id/disparar"
        android:layout_width="110dp"
        android:layout_height="61dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#00FFA5"
        android:text="Disparar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/derecha"
        android:layout_width="110dp"
        android:layout_height="61dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#00FFA5"
        android:text="Derecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disparar" />
</androidx.constraintlayout.widget.ConstraintLayout>